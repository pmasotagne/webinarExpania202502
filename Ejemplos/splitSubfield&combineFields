rule "Esborrar 908 UPF"  
when  
    (TRUE) 
then 
    splitSubField "908.a.*" to "915.a" 
    removeField "908" 
    removeField "915" if (exists "915.a.UPF") 
    combineFields "915" excluding "" 
    copyField "915" to "908" 
    removeField "915" 
end 


